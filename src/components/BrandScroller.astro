<section class="py-16 bg-gradient-to-b from-background/40 to-background/80 overflow-hidden">
  <div class="container mx-auto mb-10 text-center">
    <h2 class="text-3xl font-bold gradient-text mb-4">الشركات التي تثق بنا</h2>
    <p class="text-muted-foreground max-w-2xl mx-auto">انضم إلى آلاف الشركات الرائدة التي تستخدم منصة بنّاء لتطوير حلول الذكاء الاصطناعي</p>
  </div>

  <div class="relative w-full overflow-hidden">
    <!-- First Marquee (Right to Left) -->
    <div 
      class="flex animate-marquee-rtl py-4 
      [--gap:2rem] [--duration:40s] 
      [mask-image:linear-gradient(to_left,_rgba(0,_0,_0,_0),rgba(0,_0,_0,_1)_10%,rgba(0,_0,_0,_1)_90%,rgba(0,_0,_0,_0))]"
    >
      {Array(2).fill(0).map(() => (
        <div class="flex items-center gap-8 ml-8">
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-primary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">جوجل</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-primary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">مايكروسوفت</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-primary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">أمازون</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-primary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">أوبن اي آي</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-primary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">ميتا</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-primary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">أبل</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-primary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">أدوبي</span>
          </div>
        </div>
      ))}
    </div>

    <!-- Second Marquee (Left to Right) - Reverse direction -->
    <div 
      class="flex animate-marquee-ltr mt-8 py-4 
      [--gap:2rem] [--duration:35s] 
      [mask-image:linear-gradient(to_right,_rgba(0,_0,_0,_0),rgba(0,_0,_0,_1)_10%,rgba(0,_0,_0,_1)_90%,rgba(0,_0,_0,_0))]"
    >
      {Array(2).fill(0).map(() => (
        <div class="flex items-center gap-8 ml-8">
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-secondary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">سناب شات</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-secondary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">تويتر</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-secondary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">سبوتيفاي</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-secondary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">نتفليكس</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-secondary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">سامسونج</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-secondary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">هواوي</span>
          </div>
          <div class="flex items-center justify-center h-16 px-8 bg-muted/30 backdrop-blur-sm rounded-lg border border-muted-foreground/10 hover:border-secondary/20 transition-all duration-300">
            <span class="text-xl font-semibold text-muted-foreground/70">تسلا</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes marquee-rtl {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% - var(--gap)));
    }
  }

  @keyframes marquee-ltr {
    0% {
      transform: translateX(calc(-100% - var(--gap)));
    }
    100% {
      transform: translateX(0);
    }
  }

  .animate-marquee-rtl {
    animation: marquee-rtl var(--duration) linear infinite;
  }

  .animate-marquee-ltr {
    animation: marquee-ltr var(--duration) linear infinite;
  }
</style>