---
import { buttonVariants } from "@/components/ui/button";
---

<section class="relative overflow-hidden py-20 md:py-32">
  <!-- Background with glow effect -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 rounded-full bg-primary/20 blur-3xl animate-pulse-glow"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 rounded-full bg-secondary/20 blur-3xl animate-pulse-glow" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 right-1/3 w-64 h-64 rounded-full bg-accent/20 blur-3xl animate-pulse-glow" style="animation-delay: 2s;"></div>
  </div>

  <div class="container relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left content -->
      <div class="flex flex-col space-y-8">
        <div class="flex flex-col space-y-4">
          <div class="inline-flex items-center px-3 py-1 rounded-full bg-muted border border-border text-sm max-w-fit">
            <span class="text-primary font-medium">Become a Top 1% AI Builder</span>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold tracking-tight gradient-text leading-tight">
            AI Builder Community
          </h1>
          <p class="text-xl text-foreground/80 max-w-xl">
            Join an exclusive community of AI builders, engineers, and enthusiasts. 
            Learn, build, and grow together with premium resources and tools.
          </p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#join" class={buttonVariants({ size: "lg", variant: "default" })}>
            Get Started
          </a>
          <a href="#learn-more" class={buttonVariants({ size: "lg", variant: "outline" })}>
            Learn More
          </a>
        </div>

        <div class="flex flex-col space-y-3">
          <div class="flex items-center space-x-2">
            <div class="flex -space-x-2">
              <img src="https://randomuser.me/api/portraits/women/21.jpg" alt="Member" class="w-8 h-8 rounded-full border-2 border-background" />
              <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Member" class="w-8 h-8 rounded-full border-2 border-background" />
              <img src="https://randomuser.me/api/portraits/women/45.jpg" alt="Member" class="w-8 h-8 rounded-full border-2 border-background" />
              <img src="https://randomuser.me/api/portraits/men/67.jpg" alt="Member" class="w-8 h-8 rounded-full border-2 border-background" />
              <div class="w-8 h-8 rounded-full bg-muted border-2 border-background flex items-center justify-center">
                <span class="text-xs font-medium">+2k</span>
              </div>
            </div>
            <span class="text-sm text-foreground/70">Join our community of over 2,000 AI builders</span>
          </div>
          
          <div class="flex items-center space-x-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-500"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-500"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-500"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-500"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-500"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
            <span class="text-sm ml-2 text-foreground/70">Rated 5.0 by our members</span>
          </div>
        </div>
      </div>

      <!-- Right content - Floating cards showcase -->
      <div class="relative h-[480px]">
        <!-- Main card -->
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-72 bg-muted rounded-xl overflow-hidden shadow-2xl border border-border">
          <div class="p-5">
            <div class="flex justify-between items-center mb-4">
              <h3 class="font-semibold text-foreground">AI Builder Leaderboard</h3>
              <div class="h-6 w-6 rounded-full bg-primary/20 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
              </div>
            </div>
            <div class="space-y-3">
              <div class="flex items-center justify-between py-2 border-b border-border/50">
                <div class="flex items-center gap-2">
                  <div class="bg-secondary/20 h-8 w-8 rounded-full flex items-center justify-center">
                    <span class="text-sm font-bold text-secondary">1</span>
                  </div>
                  <div>
                    <p class="text-sm font-medium">Sarah Johnson</p>
                    <p class="text-xs text-foreground/60">5,280 points</p>
                  </div>
                </div>
                <div class="h-3 w-3 rounded-full bg-secondary"></div>
              </div>
              <div class="flex items-center justify-between py-2 border-b border-border/50">
                <div class="flex items-center gap-2">
                  <div class="bg-primary/20 h-8 w-8 rounded-full flex items-center justify-center">
                    <span class="text-sm font-bold text-primary">2</span>
                  </div>
                  <div>
                    <p class="text-sm font-medium">David Chen</p>
                    <p class="text-xs text-foreground/60">4,920 points</p>
                  </div>
                </div>
                <div class="h-3 w-3 rounded-full bg-primary"></div>
              </div>
              <div class="flex items-center justify-between py-2 border-b border-border/50">
                <div class="flex items-center gap-2">
                  <div class="bg-accent/20 h-8 w-8 rounded-full flex items-center justify-center">
                    <span class="text-sm font-bold text-accent">3</span>
                  </div>
                  <div>
                    <p class="text-sm font-medium">Lisa Patel</p>
                    <p class="text-xs text-foreground/60">4,550 points</p>
                  </div>
                </div>
                <div class="h-3 w-3 rounded-full bg-accent"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Floating card 1 -->
        <div class="absolute top-[10%] left-[15%] w-48 bg-muted rounded-lg overflow-hidden shadow-lg border border-border transform rotate-[-8deg] animate-float" style="animation-delay: 0.5s;">
          <div class="p-4">
            <div class="flex items-center space-x-2 mb-3">
              <div class="bg-primary/20 h-8 w-8 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
              </div>
              <h3 class="font-medium text-sm">AI Courses</h3>
            </div>
            <p class="text-xs text-foreground/70">Master advanced AI techniques with our expert-led courses</p>
          </div>
        </div>

        <!-- Floating card 2 -->
        <div class="absolute bottom-[15%] left-[10%] w-44 bg-muted rounded-lg overflow-hidden shadow-lg border border-border transform rotate-[12deg] animate-float" style="animation-delay: 1.5s;">
          <div class="p-4">
            <div class="flex items-center space-x-2 mb-3">
              <div class="bg-secondary/20 h-8 w-8 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary"><path d="M7 10v12"></path><path d="M15 5.88 14 10h5.83a2 2 0 0 1 1.92 2.56l-2.33 8A2 2 0 0 1 17.5 22H4a2 2 0 0 1-2-2v-8a2 2 0 0 1 2-2h2.76a2 2 0 0 0 1.79-1.11L12 2h0a3.13 3.13 0 0 1 3 3.88Z"></path></svg>
              </div>
              <h3 class="font-medium text-sm">Premium Tools</h3>
            </div>
            <p class="text-xs text-foreground/70">Exclusive access to pro-level AI tools</p>
          </div>
        </div>

        <!-- Floating card 3 -->
        <div class="absolute top-[25%] right-[10%] w-40 bg-muted rounded-lg overflow-hidden shadow-lg border border-border transform rotate-[6deg] animate-float" style="animation-delay: 2.5s;">
          <div class="p-4">
            <div class="flex items-center space-x-2 mb-3">
              <div class="bg-accent/20 h-8 w-8 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent"><path d="M2 6h.01"></path><path d="M2 12h.01"></path><path d="M2 18h.01"></path><path d="M12 6h.01"></path><path d="M12 12h.01"></path><path d="M12 18h.01"></path><path d="M22 6h.01"></path><path d="M22 12h.01"></path><path d="M22 18h.01"></path><path d="M6 6h2"></path><path d="M16 6h2"></path><path d="M6 12h2"></path><path d="M16 12h2"></path><path d="M6 18h2"></path><path d="M16 18h2"></path></svg>
              </div>
              <h3 class="font-medium text-sm">Community</h3>
            </div>
            <p class="text-xs text-foreground/70">Connect with top AI builders</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>