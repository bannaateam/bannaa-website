---
import { buttonVariants } from "@/components/ui/button";
---

<section id="pricing" class="py-20 bg-muted/30">
  <div class="container">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Simple, Transparent Pricing</h2>
