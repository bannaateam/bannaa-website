    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      <!-- Free Plan -->
      <div class="bg-muted/50 backdrop-blur-sm border border-border rounded-xl overflow-hidden transition-all duration-300 hover:border-border/80 hover:shadow-lg">
        <div class="p-6 border-b border-border">
          <h3 class="text-xl font-semibold mb-2">Explorer</h3>
          <div class="flex items-baseline mb-4">
            <span class="text-4xl font-bold">$0</span>
            <span class="text-foreground/70 ml-2">/month</span>
          </div>
          <p class="text-foreground/70 text-sm">
